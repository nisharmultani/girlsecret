# Airtable Configuration
NEXT_PUBLIC_AIRTABLE_API_KEY=your_airtable_api_key_here
NEXT_PUBLIC_AIRTABLE_BASE_ID=your_airtable_base_id_here
NEXT_PUBLIC_AIRTABLE_TABLE_NAME=Products

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://yourdomain.com
NEXT_PUBLIC_SITE_NAME=GirlSecret
NEXT_PUBLIC_SITE_DESCRIPTION=Luxury beauty and lifestyle products

# ============================================
# Google Services Configuration
# ============================================

# Google Tag Manager
# Get your GTM ID from: https://tagmanager.google.com
# Format: GTM-XXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Google Analytics 4
# Get your GA4 Measurement ID from: https://analytics.google.com
# Format: G-XXXXXXXXXX
# Note: You can use GA4 with or without GTM
NEXT_PUBLIC_GA4_ID=G-XXXXXXXXXX

# Google AdSense
# Get your AdSense Publisher ID from: https://www.google.com/adsense
# Format: ca-pub-xxxxxxxxxxxxxxxx
NEXT_PUBLIC_ADSENSE_CLIENT_ID=ca-pub-xxxxxxxxxxxxxxxx

# Google Search Console Verification
# Get your verification code from: https://search.google.com/search-console
# This is the 'content' value from the verification meta tag
# Format: A string of characters provided by Google
NEXT_PUBLIC_GOOGLE_SEARCH_CONSOLE_VERIFICATION=your_verification_code_here

